menu "Ultrasonic Board Configuration"
    config MASTER_MAC_ADDRESS
        string "Master MAC Address"
        default "246F285C3714"
        help
            Enter MAC Address of Master to connect.

    choice ULTRASONIC_DATA_MODE
        prompt "Ultrasonic data mode"
        default ULTRASONIC_SPEED_MODE
        help
            Select ultrasonic data mode Normal or speed . Speed mode only uses maximum of 6 sensors and normal mode uses maximum of 8 sensors
        config ULTRASONIC_SPEED_MODE
            bool "Speed mode"
        config ULTRASONIC_NORMAL_MODE
            bool "Normal mode"
    endchoice

    config NUMBER_OF_SENSORS
        int "Number of Sensors"
        depends on ULTRASONIC_SPEED_MODE
        default 6
        range 1 6
        help
            Number of Sensors to connect <Maximum 6 only>

    config J4_CONNECTOR_ENABLE
        bool "Enable J4 connector"
        depends on ULTRASONIC_SPEED_MODE
        default y
        help
            Select the checkbox if you are using J4 Connector in Ultrasonic PCB
    config J4_CONNECTOR_SENSOR_NO
        int "Enter the sensor Number"
        depends on J4_CONNECTOR_ENABLE
        range 1 6
        default 1
        help
            Enter the sensor number first sensor will be 0 and last sensor will be 6 
    config J10_CONNECTOR_ENABLE
